# ============================================
# University Management System - Environment Variables
# ============================================

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/university_db"

# JWT Secret Keys
SECRET_KEY="your-secret-key-here-change-in-production"
REFRESH_SECRET_KEY="your-refresh-secret-key-here-change-in-production"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Application Settings
APP_NAME="University Management System"
APP_VERSION="1.0.0"
DEBUG=true

# ============================================
# Smart Classroom AI Configuration
# ============================================

# Groq AI API Key (FREE - Get yours at https://console.groq.com/keys)
# Ultra-fast AI inference - 10x faster than OpenAI!
GROQ_API_KEY=gsk_your_groq_api_key_here

# AI Model Selection (Optional - defaults to llama-3.1-70b-versatile)
# Available models:
#   - llama-3.1-70b-versatile (Best quality, very fast)
#   - llama-3.1-8b-instant (Fastest, good quality)
#   - mixtral-8x7b-32768 (Large context - 32K tokens)
#   - gemma2-9b-it (Balanced performance)
AI_MODEL=llama-3.1-70b-versatile

# Plagiarism Detection Settings
PLAGIARISM_THRESHOLD=0.70  # 70% similarity threshold
PLAGIARISM_ENABLED=true

# ============================================
# File Storage Configuration (Optional)
# ============================================

# AWS S3 (for course materials, assignments)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=university-course-files
# AWS_REGION=us-east-1

# Azure Blob Storage (alternative to S3)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_CONTAINER_NAME=course-materials

# ============================================
# Email Configuration (Optional)
# ============================================

# SMTP Settings for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@university.com
# SMTP_FROM_NAME="University System"

# ============================================
# Redis Cache (Optional)
# ============================================

# REDIS_URL=redis://localhost:6379/0

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Security Settings
# ============================================

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=false

# ============================================
# Rate Limiting (Optional)
# ============================================

# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60

# ============================================
# Development vs Production
# ============================================

ENVIRONMENT=development  # development, staging, production
